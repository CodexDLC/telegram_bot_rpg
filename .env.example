# ==========================================
# TOKENS
# ==========================================
BOT_TOKEN="__put_token_here__"
GEMINI_TOKEN="__put_token_here__"

# ==========================================
# DATABASE URL
# ==========================================
# --- Option 1: SQLite (for local development) ---
# Use an absolute path for reliability. The app will create the file.
DATABASE_URL="sqlite+aiosqlite:///C:/path/to/your/project/data/game.db"

# --- Option 2: PostgreSQL (for production, e.g., Neon) ---
# DATABASE_URL="postgres://user:password@host:port/dbname"

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_TIMEOUT=5

# ==========================================
# OTHER
# ==========================================
# Channel for bug reports
BUG_REPORT_CHANNEL_ID=

# Comma-separated list of admin user IDs
ADMIN_IDS="12345,67890"

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL_CONSOLE=DEBUG
LOG_LEVEL_FILE=DEBUG
LOG_ROTATION="10 MB"
LOG_DIR="logs"