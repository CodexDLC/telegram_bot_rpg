
BOT_TOKEN=__put_token_here__
GEMINI_TOKEN=__put_token_here__

# ===================================================
# DATABASE URL (PostgreSQL Only)
# ===================================================
# Example for Neon / Cloud:
# DATABASE_URL=postgresql+asyncpg://user:pass@host:port/dbname?ssl=require
# Example for Local Docker:
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/game_db
# (Set DB_SSL_REQUIRE=False in .env for local docker)

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=__your_secret_password_here__

# --- Docker Specific ---
# Used by docker-compose to configure worker connection
# REDIS_URL=redis://redis:6379

BUG_REPORT_CHANNEL_ID=id_canal
ADMIN_IDS="12345,67890"

REDIS_MAX_CONNECTIONS=50
REDIS_TIMEOUT=5

# --- Log Settings ---
LOG_LEVEL_CONSOLE=DEBUG
LOG_LEVEL_FILE=DEBUG
LOG_ROTATION="10 MB"
LOG_DIR="logs"

# --- Security ---
SECRET_KEY=__generate_random_secret_key_here__
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================================
# BACKEND SERVER SETTINGS (FastAPI)
# ===================================================
PROJECT_NAME="Telegram Bot RPG API"
DEBUG=True
API_V1_STR="/api/v1"
# CORS: List of allowed origins (JSON format)
ALLOWED_ORIGINS='["*"]'
# Auto-apply migrations on startup
AUTO_MIGRATE=True
# Server Host/Port (Used by Uvicorn/Docker)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ===================================================
# BOT CLIENT SETTINGS (Connection to Backend)
# ===================================================
# URL where the bot can reach the backend API
# Local: http://localhost:8000
# Docker: http://backend:8000
BACKEND_API_URL=http://localhost:8000
BACKEND_API_KEY=__secret_api_key__
BACKEND_API_TIMEOUT=10.0
